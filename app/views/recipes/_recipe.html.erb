<p>
  <b>Title:</b>
  <%= link_to recipe.title, recipe %>
</p>

<p>
  <em>added by <%= link_to recipe.user.username, recipe.user %></em>
</p>

<p>
  <%= check_image(recipe) %>
</p>

<p>
  <b>Ingredients:</b>
  <% if recipe.ingredient_list.length > 50 %>
      <%= truncate(recipe.ingredient_list, length: 50) %>
      <%= link_to_function '...More', "$(this).parent().html('#{escape_javascript recipe.ingredient_list}')" %>
  <% else %>
      <%= recipe.ingredient_list %>
  <% end %>
</p>

<p>
  <b>Instructions:</b>
  <% if recipe.body.length > 50 %>
      <%= truncate(recipe.body, length: 50) %>
      <%= link_to_function '...More', "$(this).parent().html('#{escape_javascript recipe.body}')" %>
  <% else %>
      <%= recipe.body %>
  <% end %>
</p>

<p>
  <%= link_to 'Destroy Recipe', [recipe.user, recipe],
              :confirm => 'Are you sure?',
              :method => :delete %>
</p>

<hr>


